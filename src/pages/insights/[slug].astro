---
import BaseLayout from '../../components/BaseLayout.astro';

import blogData from '../../data/blog.json';

export async function getStaticPaths() {
  return blogData.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

interface Props {
  post: typeof blogData[0];
}

const { post } = Astro.props;
const postDate = new Date(post.date);
const formattedDate = postDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<BaseLayout
  title={`${post.title} - Hashturn Insights`}
  description={post.description}
  canonical={`/insights/${post.slug}`}
>
  <article class="blog-post section">
    <div class="container">
      <header class="post-header">
        <div class="post-meta">
          <span class="post-category">{post.category}</span>
          <time datetime={post.date} class="post-date">{formattedDate}</time>
          <span class="post-author">By {post.author}</span>
        </div>
        <h1 class="post-title">{post.title}</h1>
      </header>

      <div class="post-content">
        <p class="post-excerpt">{post.excerpt}</p>
        
        <!-- Placeholder content - replace with actual blog content -->
        <div class="post-body">
          <p>
            This is placeholder content for the blog post. In a real implementation, 
            you would either:
          </p>
          <ul>
            <li>Store full content in the JSON file</li>
            <li>Use markdown files with frontmatter</li>
            <li>Fetch content from a CMS</li>
          </ul>
          <p>
            For now, this demonstrates the structure and styling of individual blog posts.
            The actual content would be inserted here based on your content management approach.
          </p>
          <h2>Section Heading</h2>
          <p>
            Additional content sections would go here. This template provides a clean, 
            readable layout optimized for SEO and user experience.
          </p>
        </div>
      </div>

      <footer class="post-footer">
        <a href="/insights" class="back-link">‚Üê Back to Insights</a>
      </footer>
    </div>
  </article>
</BaseLayout>

<style>
  .blog-post {
    padding-top: var(--spacing-xl);
    background: var(--color-white);
  }

  [data-theme="dark"] .blog-post {
    background: var(--color-white);
  }

  [data-theme="dark"] .post-content {
    color: var(--color-text);
  }

  [data-theme="dark"] .post-excerpt {
    color: var(--color-text-light);
    border-bottom-color: var(--color-border);
  }

  [data-theme="dark"] .post-footer {
    border-top-color: var(--color-border);
  }

  .post-header {
    max-width: 800px;
    margin: 0 auto var(--spacing-2xl);
    text-align: center;
  }

  .post-meta {
    display: flex;
    gap: var(--spacing-md);
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
    margin-bottom: var(--spacing-md);
    font-size: 0.875rem;
    color: var(--color-text-light);
  }

  .post-category {
    background-color: var(--color-primary);
    color: var(--color-secondary);
    padding: 0.25rem 0.75rem;
    border-radius: 4px;
    font-weight: 600;
    text-transform: uppercase;
    font-size: 0.75rem;
    letter-spacing: 0.5px;
  }

  .post-title {
    font-size: clamp(2rem, 4vw, 3rem);
    line-height: 1.2;
    margin-bottom: 0;
  }

  .post-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .post-excerpt {
    font-size: 1.25rem;
    color: var(--color-text-light);
    font-weight: 500;
    line-height: 1.7;
    margin-bottom: var(--spacing-xl);
    padding-bottom: var(--spacing-lg);
    border-bottom: 1px solid var(--color-border);
  }

  .post-body {
    line-height: 1.8;
    color: var(--color-text);
  }

  .post-body h2 {
    margin-top: var(--spacing-xl);
    margin-bottom: var(--spacing-md);
    font-size: 2rem;
  }

  .post-body h3 {
    margin-top: var(--spacing-lg);
    margin-bottom: var(--spacing-sm);
    font-size: 1.5rem;
  }

  .post-body p {
    margin-bottom: var(--spacing-md);
  }

  .post-body ul,
  .post-body ol {
    margin-bottom: var(--spacing-md);
    padding-left: var(--spacing-lg);
    list-style-position: outside;
  }

  .post-body ul {
    list-style-type: disc;
  }

  .post-body ol {
    list-style-type: decimal;
  }

  .post-body li {
    margin-bottom: var(--spacing-xs);
  }

  .post-footer {
    max-width: 800px;
    margin: var(--spacing-2xl) auto 0;
    padding-top: var(--spacing-lg);
    border-top: 1px solid var(--color-border);
  }

  .back-link {
    color: var(--color-accent);
    font-weight: 600;
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .back-link:hover {
    color: var(--color-primary);
    text-decoration: underline;
  }
</style>

