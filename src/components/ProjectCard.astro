---
interface Props {
  name: string;
  description: string;
  techStack: string[];
  industry?: string;
  thumbnail: string;
  externalLink?: string;
}

const { name, description, techStack, industry, thumbnail, externalLink } = Astro.props;
---

<article class="project-card group">
  <!-- Card Background -->
  <div class="card-background"></div>
  
  <!-- Card Content -->
  <div class="card-content">
    <div class="project-image-wrapper">
      <img 
        src={thumbnail} 
        alt={`${name} project thumbnail`}
        class="project-image"
        loading="lazy"
      />
    </div>
    
    <div class="project-info">
      {industry && (
        <div class="industry-badge">
          <span class="badge-text">{industry}</span>
        </div>
      )}
      
      <h3 class="project-name">{name}</h3>
      
      <p class="project-description">{description}</p>
      
      <div class="project-tech">
        <span class="tech-label">Tech Stack</span>
        <ul class="tech-list">
          {techStack.map((tech) => (
            <li class="tech-item">{tech}</li>
          ))}
        </ul>
      </div>
      
      {externalLink && (
        <div class="card-footer">
          <a 
            href={externalLink} 
            target="_blank" 
            rel="noopener noreferrer"
            class="project-link"
            aria-label={`View ${name} project`}
          >
            <span>View Project</span>
            <svg class="arrow-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M5 12h14M12 5l7 7-7 7" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </a>
        </div>
      )}
    </div>
  </div>
</article>

<style>
  .project-card {
    position: relative;
    background: var(--color-secondary);
    border-radius: var(--radius-lg);
    overflow: hidden;
    display: flex;
    flex-direction: column;
    transition: all var(--transition-base);
    height: 100%;
    box-shadow: var(--shadow-md);
  }

  .project-card:hover {
    transform: translateY(-8px);
    box-shadow: var(--shadow-xl);
  }

  .card-background {
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, rgba(21, 207, 170, 0.05) 0%, rgba(130, 232, 200, 0.03) 100%);
    opacity: 0;
    transition: opacity var(--transition-base);
    z-index: 0;
  }

  .project-card:hover .card-background {
    opacity: 1;
  }

  .card-content {
    position: relative;
    z-index: 1;
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .project-image-wrapper {
    width: 100%;
    height: 240px;
    overflow: hidden;
    background-color: rgba(0, 0, 0, 0.2);
  }

  .project-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-base);
  }

  .project-card:hover .project-image {
    transform: scale(1.08);
  }

  .project-info {
    padding: 32px;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }

  .industry-badge {
    display: inline-flex;
    align-items: center;
    padding: 6px 12px;
    background: rgba(21, 207, 170, 0.1);
    border: 1px solid rgba(21, 207, 170, 0.2);
    border-radius: var(--radius-sm);
    margin-bottom: 16px;
    width: fit-content;
    transition: all var(--transition-fast);
  }

  .project-card:hover .industry-badge {
    background: rgba(21, 207, 170, 0.15);
    border-color: rgba(21, 207, 170, 0.3);
  }

  .badge-text {
    color: var(--color-accent);
    font-size: 12px;
    font-weight: var(--font-weight-semibold);
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .project-name {
    color: var(--color-white);
    font-size: 24px;
    font-weight: var(--font-weight-bold);
    margin: 0 0 16px 0;
    line-height: 1.2;
  }

  .project-description {
    color: rgba(255, 255, 255, 0.8);
    line-height: 1.7;
    margin: 0 0 24px 0;
    flex-grow: 1;
    font-size: 15px;
  }

  .project-tech {
    margin-bottom: 24px;
  }

  .tech-label {
    font-weight: var(--font-weight-semibold);
    color: rgba(255, 255, 255, 0.9);
    font-size: 13px;
    display: block;
    margin-bottom: 12px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .tech-list {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .tech-item {
    background: rgba(255, 255, 255, 0.1);
    color: var(--color-white);
    padding: 6px 12px;
    border-radius: var(--radius-sm);
    font-size: 13px;
    font-weight: var(--font-weight-medium);
    border: 1px solid rgba(255, 255, 255, 0.1);
    transition: all var(--transition-fast);
  }

  .project-card:hover .tech-item {
    background: rgba(130, 232, 200, 0.15);
    border-color: rgba(130, 232, 200, 0.3);
  }

  .card-footer {
    margin-top: auto;
    padding-top: 16px;
  }

  .project-link {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    color: var(--color-accent);
    font-weight: var(--font-weight-semibold);
    text-decoration: none;
    transition: all var(--transition-fast);
    font-size: 15px;
  }

  .project-link:hover,
  .project-link:focus {
    color: var(--color-primary);
    gap: 12px;
  }

  .arrow-icon {
    width: 18px;
    height: 18px;
    transition: transform var(--transition-fast);
  }

  .project-link:hover .arrow-icon {
    transform: translateX(4px);
  }

  @media (max-width: 768px) {
    .project-info {
      padding: 24px;
    }

    .project-name {
      font-size: 22px;
    }

    .project-image-wrapper {
      height: 200px;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .project-card,
    .project-image,
    .tech-item,
    .project-link {
      transition: none !important;
    }

    .project-card:hover {
      transform: translateY(-4px) !important;
    }
  }
</style>




