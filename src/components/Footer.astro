---
const currentYear = new Date().getFullYear();
const navItems = [
  { label: 'Home', path: '/' },
  { label: 'Services', path: '/services' },
  { label: 'Work', path: '/work' },
  { label: 'Insights', path: '/insights' },
  { label: 'Company', path: '/company' },
  { label: 'Contact', path: '/contact' },
];
---

<footer class="footer">
  <div class="container">
    <div class="footer-content">
      <div class="footer-section">
        <a href="/" class="footer-logo-wrapper" aria-label="Hashturn Home">
          <img src="/images/logo.png" alt="Hashturn Logo" class="footer-logo-image" width="48" height="48" />
          <h3 class="footer-logo">Hashturn</h3>
        </a>
        <p class="footer-description">
          Building exceptional digital experiences with modern technology and creative solutions.
        </p>
      </div>
      
      <div class="footer-section">
        <h4 class="footer-heading">Navigation</h4>
        <nav aria-label="Footer navigation">
          <ul class="footer-nav">
            {navItems.map((item) => (
              <li>
                <a href={item.path} class="footer-link">{item.label}</a>
              </li>
            ))}
          </ul>
        </nav>
      </div>
      
      <div class="footer-section">
        <h4 class="footer-heading">Contact</h4>
        <p class="footer-text">
          <a href="mailto:info@hashturn.com" class="footer-link">info@hashturn.com</a>
        </p>
      </div>
    </div>
    
    <div class="footer-bottom">
      <p class="footer-copyright">
        &copy; {currentYear} Hashturn. All rights reserved.
      </p>
    </div>
  </div>
</footer>

<style>
  .footer {
    background-color: var(--color-secondary);
    color: var(--color-white);
    padding: var(--spacing-xl) 0 var(--spacing-md);
    margin-top: 0;
    transition: background-color var(--transition-base);
  }

  [data-theme="dark"] .footer {
    background: linear-gradient(135deg, rgba(15, 23, 42, 0.95) 0%, rgba(30, 41, 59, 0.95) 100%);
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .footer-content {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--spacing-lg);
    margin-bottom: var(--spacing-lg);
  }

  @media (min-width: 768px) {
    .footer-content {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .footer-section {
    display: flex;
    flex-direction: column;
  }

  .footer-logo-wrapper {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    margin-bottom: var(--spacing-sm);
    text-decoration: none;
    overflow: visible; /* Allow logo to slide without clipping */
    position: relative;
    padding-left: 8px; /* Add padding to accommodate left slide */
    margin-left: -8px; /* Offset padding to maintain alignment */
    width: fit-content; /* Prevent full width expansion */
  }

  .footer-logo-wrapper:hover {
    text-decoration: none;
  }

  /* Footer Logo Image - Default visible, slides left on hover */
  .footer-logo-image {
    width: 48px;
    height: 48px;
    display: block;
    flex-shrink: 0; /* Prevent image from shrinking */
    filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.2));
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    will-change: transform; /* Performance optimization */
  }

  /* Footer Logo Image - Slides left on hover */
  .footer-logo-wrapper:hover .footer-logo-image {
    transform: translateX(-8px);
  }

  /* Footer Logo Text - Hidden by default, fades and slides in on hover */
  .footer-logo {
    font-size: 1.5rem;
    margin: 0;
    color: var(--color-primary);
    font-weight: 800;
    letter-spacing: -0.02em;
    white-space: nowrap; /* Prevent text wrapping */
    
    /* Initial state: hidden and positioned to the left */
    opacity: 0;
    transform: translateX(-12px);
    max-width: 0; /* Collapse width to prevent layout shift */
    overflow: hidden;
    transition: opacity 0.3s cubic-bezier(0.4, 0, 0.2, 1),
                transform 0.3s cubic-bezier(0.4, 0, 0.2, 1),
                max-width 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    will-change: opacity, transform, max-width; /* Performance optimization */
    flex-shrink: 0; /* Prevent text from shrinking */
  }

  /* Footer Logo Text - Visible and slides in on hover */
  .footer-logo-wrapper:hover .footer-logo {
    opacity: 1;
    transform: translateX(0);
    max-width: 200px; /* Expand to accommodate text */
    transition: opacity 0.3s cubic-bezier(0.4, 0, 0.2, 1) 0.05s,
                transform 0.3s cubic-bezier(0.4, 0, 0.2, 1) 0.05s,
                max-width 0.3s cubic-bezier(0.4, 0, 0.2, 1) 0.05s; /* Slight delay for smooth reveal */
  }

  /* Mobile: Simplified animation, text always visible for better UX */
  @media (max-width: 767px) {
    .footer-logo-wrapper {
      padding-left: 0;
      margin-left: 0;
    }

    .footer-logo {
      opacity: 1; /* Always visible on mobile */
      transform: translateX(0);
      max-width: 200px;
    }

    .footer-logo-image {
      width: 40px;
      height: 40px;
    }

    /* Disable hover animations on mobile (touch devices) */
    .footer-logo-wrapper:hover .footer-logo-image {
      transform: none;
    }

    .footer-logo-wrapper:hover .footer-logo {
      opacity: 1;
      transform: translateX(0);
      max-width: 200px;
    }
  }

  /* Reduced motion support for accessibility */
  @media (prefers-reduced-motion: reduce) {
    .footer-logo-image,
    .footer-logo {
      transition: none;
    }

    .footer-logo-wrapper:hover .footer-logo-image {
      transform: none;
    }

    .footer-logo-wrapper:hover .footer-logo {
      opacity: 1;
      transform: translateX(0);
      max-width: 200px;
    }
  }

  .footer-heading {
    font-size: 1.125rem;
    margin-bottom: var(--spacing-sm);
    color: var(--color-primary);
  }

  .footer-description {
    color: rgba(255, 255, 255, 0.8);
    line-height: 1.6;
  }

  .footer-nav {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xs);
    list-style: none;
  }

  .footer-link {
    color: rgba(255, 255, 255, 0.8);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .footer-link:hover,
  .footer-link:focus {
    color: var(--color-primary);
    text-decoration: none;
  }

  .footer-text {
    color: rgba(255, 255, 255, 0.8);
  }

  .footer-bottom {
    border-top: 1px solid rgba(255, 255, 255, 0.2);
    padding-top: var(--spacing-md);
    text-align: center;
  }

  .footer-copyright {
    color: rgba(255, 255, 255, 0.6);
    font-size: 0.875rem;
  }
</style>

